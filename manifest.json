{
  "manifest_version": 3,
  "name": "网图下载助手",
  "version": "3.1.1",
  "description": "一键下载网页中的所有图片，支持动态加载的图片资源",
  "permissions": [
    "activeTab",
    "downloads",
    "webRequest",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "*://*.qpic.cn/*",
    "*://*.weixin.qq.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}